<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title%></title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <span class="navbar-brand">Grocery Buddy</span>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <h1><%= user.userName %>'s grocery list</h1>
    <section class="container">
        <ul class="list-group list-group">
            <%category.forEach(item => {%>
                <%if(item.display){%>
                    <li class="categoryName "><h2 class="text-primary text-center border-top"><%=item.category%></h2></li>
                <%}%>
                <% todos.forEach( el => { %>
                    <%if(el.category === item.category){%>
                        <li class='todoItem  border-top' data-id='<%=el._id%>'>
                            <div class="d-flex flex-row align-items-center my-1"> 
                                <div class="bg-secondary p-2 text-dark d-flex flex-column" style="--bs-bg-opacity: .2;">

                                    
                                    <span class='<%= el.completed === true ? 'completed' : 'not'%>'><%= el.todo %></span>
                                    <span class="fs-6 ">Quantity: <%= el.quantity%></span>
                                </div>
                                <div class="ms-auto">
                                    
                                    <button class='edit btn btn-success btn-sm '> <a class="text-light" href="todos/edit/<%=el._id%>">Edit</a> </button>
                                    <button class='del btn btn-warning btn-sm'> Delete </button>
                                </div>
                            </div>
                            </li>
                    <%}%>
                <%})%>  
            <%})%>
    
        </ul>
    
        <h2><%= user.userName %> has <%= left %> item(s) to pick up.</h2>
    </section>
    <section class="container">
        <form action="/todos/createTodo" method='POST' id="subForm" class="container mb-3">
            <div class="categoryForm">
                <button type="button" class="btn btn-primary"><a href="todos/category">Add/Delete Category</a></button>
                <select class="form-select form-select-sm" name="category" id="categoryForm" required>
                    <option value="">Select Category</option>
                    <%newCategory.forEach(el=>{%>
                        <option value="<%=el.category%>"><%=el.category%></option>
                    <%})%>
                    <option value="PRODUCE">PRODUCE</option>
                    <option value="DAIRY">DAIRY</option>
                    <option value="DELI">DELI</option>
                    <option value="FROZEN">FROZEN</option>
                    <option value="OTHER">OTHER</option>
                </select>
            </div>
            <div class="groceryForm">
                <input type="text" placeholder="Enter Grocery Item" name='todoItem' required>
                <input type="number" placeholder="quantity(optional)" name='quantity' min="0">
                <button class="btn btn-primary" type="submit">Add</button>
                <button class="btn btn-primary" type="reset" id="resetBtn" >Reset</button>
            </div>
        </form>
    </section>
    
    


    <script src="js/main.js"></script>
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>

</html>
